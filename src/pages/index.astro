---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getRecentPosts } from '@/lib/data-utils'

const blog = await getRecentPosts(SITE.featuredPostCount)
---

<Layout>
  <PageHead slot="head" title="maison" />
  <section>
    <div class="rounded-lg border">
      <div class="flex flex-col space-y-1.5 p-6">
        <h3 class="text-3xl leading-none font-medium">e·tyen</h3>
        <p class="text-muted-foreground text-sm">
          / e.tjɛn / &bull; <span class="font-medium">nom propre</span>
        </p>
      </div>
      <div class="p-6 pt-0">
        <p class="text-muted-foreground mb-2 text-sm">
          bachelier en marketing, expert en stratégie web et solutions digitales (aucun rapport). ce blog est fait avec le thème 
          <Link
            href="https://github.com/jktrn/astro-erudite"
            class="text-foreground"
            external
            underline>astro-erudite</Link
          >
          et Github Pages. 
        </p>
        <p class="text-muted-foreground text-sm">
          respire, on sauve pas des vies.
        </p>
      </div>
    </div>
  </section>
  <section class="flex flex-col gap-y-4">
    <h2 class="text-2xl font-medium">le bla bla</h2>
    <ul class="flex flex-col gap-y-4">
      {
        blog.map((post) => (
          <li>
            <BlogCard entry={post} />
          </li>
        ))
      }
    </ul>
    <div class="flex justify-center">
      <Link
        href="/astro-blog/blog"
        class={buttonVariants({ variant: 'ghost' }) + ' group'}
      >
        tout le yap <span
          class="ml-1.5 transition-transform group-hover:translate-x-1"
          >&rarr;</span
        >
      </Link>
    </div>
  </section>
</Layout>
